<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalAppTemplate.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserCreation" asp-action="MainPage">Home</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (!string.IsNullOrEmpty(Context.Request.Cookies["UserSession"]))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-controller="UserCreation" asp-action="LoggedUser">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="UserCreation" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="nav-link btn btn-link text-dark" style="cursor:pointer;">Log Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-primary me-2" asp-controller="UserCreation" asp-action="Login">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-controller="UserCreation" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FinalAppTemplate - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
