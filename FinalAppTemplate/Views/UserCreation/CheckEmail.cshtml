@{
    ViewData["Title"] = "Check Your Email";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-info">Verify Your Email</h1>
    <p class="lead">
        We have sent a verification email to your address.
    </p>
    <p>
        Please check your inbox and click the link to activate your account.
    </p>
    <hr />
    <p class="text-muted">
        Already verified? <a asp-action="Login">Log in here</a>.
    </p>
</div>