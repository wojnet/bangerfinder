@model FinalAppTemplate.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>Welcome, @Model.Name!</h3>
        </div>
        <div class="card-body">
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Account Created:</strong> @Model.CreatedAt?.ToString("MMMM dd, yyyy")</p>

            <hr />

            <a asp-controller="Recommendations" asp-action="Index" class="btn btn-success">
                View My Music Recommendations
            </a>

            <form asp-controller="UserCreation" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">Log Out</button>
            </form>
        </div>
    </div>
</div>